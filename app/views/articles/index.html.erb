<h1>Artículos</h1>
<img src="http://placekitten.com/g/1500/300"/>
<%= link_to 'Nuevo artículo', new_article_path, class: "big button" %>
<table>
  <tr>
    <th>Título</th>
    <th>Texto</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Mostrar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Borrar', article_path(article),
              method: :delete,
              data: { confirm: '¿Estás seguro?' } %></td>
    </tr>
  <% end %>
</table>